{
  "compilerOptions": {
    "outDir": "ts-build",
    "target": "es2018",
    "module": "esnext",
    "strict": false,
    "allowJs": true,
    "jsx": "preserve",
    "importHelpers": true,
    "inlineSources": true,
    "sourceMap": true,
    "moduleResolution": "Node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "types": [
      "webpack-env",
      "jest"
    ],
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.spec.ts"
  ]
}
