{
  "manifest_version": 2,
  "name": "LoopStreamer Captcha Helper",
  "description": "A Netflix like auto player for free streaming pages",
  "version": "0.1.1",
  "permissions": [
    "webRequest",
    "notifications",
    "webRequestBlocking",
    "storage",
    "tabs",
    "contentSettings",

    "http://*/*",
    "https://*/*"
  ],
  "default_locale": "de",
  "options_page": "options/index.html",
  "icons": {
    "16": "/assets/icon/icon16.png",
    "48": "/assets/icon/icon48.png",
    "128": "/assets/icon/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "content.js"
      ],
      "all_frames": false
    }
  ],
  "web_accessible_resources": [
    "resources/img/*/*.png"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_popup": "popup/index.html"
  }
}
